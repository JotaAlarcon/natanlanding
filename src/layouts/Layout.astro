---
import LinkNav from "../components/LinkNav.astro";
import "../styles/Layout.css";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NatanDev - {title}</title>
  </head>
  <body>
    <main
      class="absolute top-0 z-[-2] h-screen w-screen bg-[radial-gradient(ellipse_80%_80%_at_50%_-15%,rgba(0,210,160,0.3),rgba(255,255,255,0))]"
    >
      <LinkNav />
      <slot />
    </main>
  </body>
</html>
